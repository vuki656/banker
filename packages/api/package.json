{
    "name": "@banker/api",
    "version": "1.0.0",
    "private": true,
    "scripts": {
        "build:project": "yarn build:schema && webpack",
        "build:schema": "ts-node ./src/server/build-schema.ts",
        "database:inspect": "prisma studio",
        "database:migrate": "docker compose run --no-deps --rm migration",
        "database:seed": "ts-node ./src/database/seed/index.ts",
        "database:setup": "docker compose run --rm migration",
        "database:sync": "prisma db pull && prettier --write './src/database/schema.prisma'",
        "dev": "nodemon",
        "generate:template": "plop",
        "start:metrics": "docker compose run prometheus",
        "start:app": "node 'dist/main.js'",
        "generate:types:dev": "yarn graphql-codegen --config='./codegen.ts'",
        "generate:types:orm": "prisma generate",
        "generate:types:test": "graphql-codegen --config='./codegen.tests.ts'",
        "production:kill": "pm2 stop api 2> /dev/null || true && pm2 delete api 2> /dev/null || true",
        "production:restart": "yarn && yarn generate:types:orm && yarn generate:types:dev && yarn build:project && yarn build:schema && yarn production:kill && yarn production:start",
        "production:start": "pm2 start yarn --interpreter bash --name api -- start",
        "test": "jest --runInBand"
    },
    "dependencies": {
        "@apollo/server": "^4.5.0",
        "@prisma/client": "^4.11.0",
        "bcrypt": "^5.1.0",
        "body-parser": "^1.20.2",
        "cors": "^2.8.5",
        "dotenv": "^16.0.3",
        "envalid": "^7.3.1",
        "express": "^4.18.2",
        "node-cron": "^3.0.2",
        "node-fetch": "2.6.9",
        "pino": "^8.11.0"
    },
    "devDependencies": {
        "@faker-js/faker": "^7.6.0",
        "@graphql-codegen/cli": "^3.2.2",
        "@graphql-codegen/graphql-modules-preset": "^3.1.1",
        "@graphql-codegen/typescript-operations": "^3.0.2",
        "@graphql-codegen/typescript-resolvers": "^3.1.1",
        "@graphql-tools/load-files": "^6.6.1",
        "@graphql-tools/merge": "^8.4.0",
        "@types/bcrypt": "^5.0.0",
        "@types/body-parser": "^1.19.2",
        "@types/cors": "^2.8.13",
        "@types/express": "^4.17.17",
        "@types/jest": "^29.4.0",
        "@types/node-cron": "^3.0.7",
        "@types/node-fetch": "2.6.2",
        "@types/string-replace-loader": "^2.3.2",
        "@types/webpack-node-externals": "^3.0.0",
        "copy-webpack-plugin": "^11.0.0",
        "graphql-tag": "^2.12.6",
        "jest": "^29.5.0",
        "nodemon": "^2.0.21",
        "pino-pretty": "^9.4.0",
        "plop": "^3.1.2",
        "prisma": "^4.11.0",
        "string-replace-loader": "^3.1.0",
        "ts-jest": "^29.0.5",
        "ts-loader": "^9.4.2",
        "ts-node": "^10.9.1",
        "webpack": "^5.76.0",
        "webpack-cli": "^5.0.1",
        "webpack-node-externals": "^3.0.0"
    },
    "prisma": {
        "schema": "./src/database/schema.prisma"
    }
}
