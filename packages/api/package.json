{
    "name": "api",
    "version": "1.0.0",
    "private": true,
    "scripts": {
        "dev": "nodemon",
        "start": "NODE_ENV=production node 'dist/index.js'",
        "generate": "ts-node ./generator",
        "generate:pagination": "ts-node ./src/shared/utils/generatePaginationTypes/generatePaginationTypes.ts",
        "database": "docker-compose run --rm migrations && docker image rm api_migrations",
        "database:sync": "prisma db pull && prettier --write './src/database/schema.prisma'",
        "database:seed": "prisma db seed",
        "orm:generate": "prisma generate"
    },
    "dependencies": {
        "@devoxa/prisma-relay-cursor-connection": "^2.2.1",
        "@prisma/client": "^3.13.0",
        "apollo-server": "^3.6.7",
        "bcrypt": "^5.0.1",
        "date-fns": "^2.28.0",
        "dotenv": "^16.0.0",
        "envalid": "^7.3.1",
        "graphql": "15.3.0",
        "jsonwebtoken": "^8.5.1",
        "pino": "^7.11.0",
        "reflect-metadata": "^0.1.13",
        "tsyringe": "^4.6.0",
        "type-graphql": "^1.1.1",
        "uuid": "^8.3.2"
    },
    "devDependencies": {
        "@faker-js/faker": "^6.3.1",
        "@graphql-codegen/cli": "^2.6.2",
        "@graphql-codegen/gql-tag-operations-preset": "^1.4.0",
        "@types/bcrypt": "^5.0.0",
        "@types/jest": "^27.4.1",
        "@types/jsonwebtoken": "^8.5.8",
        "@types/node": "16.11.33",
        "@types/uuid": "^8.3.4",
        "@types/validator": "^13.7.2",
        "class-validator": "^0.13.2",
        "generate-template-files": "^3.2.0",
        "jest": "27.5.1",
        "nodemon": "^2.0.16",
        "pino-pretty": "^7.6.1",
        "prettier-plugin-prisma": "^3.13.0",
        "prisma": "^3.13.0",
        "ts-jest": "^27.1.4",
        "ts-loader": "^9.3.0",
        "ts-node": "^10.7.0"
    },
    "prisma": {
        "schema": "./src/database/schema.prisma",
        "seed": "ts-node ./src/database/seed/index.ts"
    }
}
