{
    "name": "banker",
    "version": "1.0.0",
    "private": true,
    "scripts": {
        "api:restart": "yarn workspace @banker/api production:restart",
        "web:restart": "yarn workspace @banker/web production:restart",
        "restart": "yarn api:restart && yarn web:restart",
        "lint": "yarn lint:config && yarn lint:spell && yarn lint:source ",
        "lint:ci": "yarn workspace @banker/api orm:generate && yarn workspace @banker/web codegen && yarn lint",
        "lint:fix": "eslint './packages/**/*' --fix --quiet",
        "lint:source": "eslint './packages/**/*' --quiet --cache --cache-strategy='content' --cache-location='.eslintcache/'",
        "lint:config": "prettier --loglevel warn --check {*,**/*}.{json,yml,yaml}",
        "lint:spell": "cspell lint '**' --no-summary --no-progress",
        "lint:clean": "rm -rf ./eslintcache && rm .cspellcache"
    },
    "dependencies": {
        "dayjs": "^1.11.5",
        "graphql": "15.3.0",
        "uuid": "^9.0.0"
    },
    "devDependencies": {
        "@graphql-codegen/cli": "^2.13.5",
        "@graphql-codegen/gql-tag-operations-preset": "^1.6.0",
        "@rimac-technology/eslint-config": "^29.0.1",
        "@types/node": "18.8.3",
        "@types/uuid": "^8.3.4",
        "cspell": "^6.12.0",
        "eslint": "8.25.0",
        "prettier": "^2.7.1",
        "typescript": "4.8.4"
    },
    "packageManager": "yarn@3.2.0",
    "workspaces": [
        "packages/*"
    ]
}
